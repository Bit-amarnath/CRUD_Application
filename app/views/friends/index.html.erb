<h1>Friend List</h1>
<div id="friends" class="mt-3">
  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr class="text-center">
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Phone number</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <th><%= friend.first_name %></th>
          <th><%= friend.last_name %></th>
          <th><%= friend.email%></th>
          <th><%= friend.phone%></th>
          <th><%= link_to 'View', friend %></th>
          <th><%= link_to 'Edit', edit_friend_path(friend) %></th>
          <th><%= link_to 'Delete', friend, data: {turbo_method: :delete, turbo_confirm: 'Are you sure ?'} %></th>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= link_to "New friend", new_friend_path, class:"btn btn-success btn-lg mt-3" %>
